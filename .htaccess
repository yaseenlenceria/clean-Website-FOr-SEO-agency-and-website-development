RewriteEngine On

# Remove .html extension from URLs - Serve .html files for clean URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html URLs to clean URLs (301 redirect for SEO)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1? [R=301,L]

# Handle specific page redirects for SEO consistency
RewriteRule ^index/?$ / [R=301,L]

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Cache Control
<filesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive on
    ExpiresDefault "access plus 1 month"
</filesMatch>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Force HTTPS (when deployed)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Custom 404 error page
ErrorDocument 404 /404.html

# Redirect index.html to root domain for canonical URL
RewriteCond %{THE_REQUEST} \s/+index\.html[\s?] [NC]
RewriteRule ^index\.html$ /? [R=301,L]

# Redirect www to non-www (if using www subdomain)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Remove trailing slashes for better SEO
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} /+([^?\s]*?)/?(\?[^\s]*?)?\s
RewriteRule ^.*$ /%1%2 [R=301,L]

# Handle root directory requests
DirectoryIndex index.html

# Set proper MIME types for XML files
AddType application/xml .xml
AddType text/xml .xml

# Ensure sitemap.xml is served correctly
<Files "sitemap.xml">
    Header set Content-Type "application/xml; charset=utf-8"
    Header set Cache-Control "public, max-age=3600"
</Files>

# Prevent access to sensitive files
<Files "robots.txt">
    Allow from all
</Files>

<Files "sitemap.xml">
    Allow from all
</Files>

<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Set proper MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
</IfModule>
RewriteEngine On

# Redirect old dynamic URLs to new clean URLs
RewriteCond %{QUERY_STRING} ^city=([^&]+)&service=SEO%20Company$
RewriteRule ^dynamic-city-page\.html$ /best-seo-company-%1.html? [R=301,L]

# Handle clean city URLs
RewriteRule ^best-seo-company-([a-zA-Z0-9\-]+)\.html$ /dynamic-city-page.html?city=$1&service=SEO%20Company [L,QSA]

# Handle service URLs
RewriteRule ^best-([a-zA-Z0-9\-]+)-seo-services-uk\.html$ /dynamic-city-page.html?service=$1%20SEO [L,QSA]

# Handle combined city and service URLs
RewriteRule ^best-([a-zA-Z0-9\-]+)-seo-([a-zA-Z0-9\-]+)\.html$ /dynamic-city-page.html?service=$1%20SEO&city=$2 [L,QSA]

# Force HTTPS (optional)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} /+$
RewriteRule ^(.*)/ /$1 [R=301,L]

# Add .html extension if file exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Set browser caching
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
</FilesMatch>

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>
